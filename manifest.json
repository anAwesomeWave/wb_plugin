{
  "manifest_version": 3,
  "name": "WB Token Plugin",
  "version": "1.0",
  "description": "A plugin to handle token on Wildberries seller page.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://seller.wildberries.ru/new-goods/all-goods"],
      "js": ["content.js"]
    }
  ]
}